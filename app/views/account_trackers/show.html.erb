<% title @presenter.name %>

<% content_for :page_options do %>
  <%=
    link_to account_tracker_path(@presenter.tracker),
    class: "mdl-menu__item",
    method: :delete,
    data: { confirm: I18n.t('trackers.tracker.delete_message') } do %>
    <%= t('page_options.delete').titleize %>
  <% end %>
<% end %>

<section class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--8-col-phone">
  <h3>Recent Posts</h3>
  <div class="mdl-grid mdl-grid--nested">
    <%= render partial: 'post', collection: @presenter.recent_posts %>
  </div>
</section>

<script type='text/javascript'>
  setCardHeight();
  
  $(document).ready(function () {
    createLinks();
  });

  $(window).on("resize", function() {
    setCardHeight();
  });
</script>
