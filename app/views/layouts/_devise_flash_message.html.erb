<div class="col-sm-12">
  <% if alert.present? %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>
  
  <% if notice.present? %>
    <div class="alert alert-info"><%= notice %></div>
  <% end %>

  <% if success.present? %>
    <div class="alert alert-success"><%= success %></div>
  <% end %>
</div>
